{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug",
      "description": "Windows向けデバッグビルド (MSVC)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Windows MSVC Release",
      "description": "Windows向けリリースビルド (MSVC)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "windows-mingw-debug",
      "displayName": "Windows MinGW Debug",
      "description": "Windows向けデバッグビルド (MinGW)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "windows-mingw-release",
      "displayName": "Windows MinGW Release",
      "description": "Windows向けリリースビルド (MinGW)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Linux向けデバッグビルド",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Linux向けリリースビルド",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-debug",
      "configurePreset": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug ビルド",
      "description": "Windows MSVC デバッグビルド実行"
    },
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release",
      "displayName": "Windows MSVC Release ビルド",
      "description": "Windows MSVC リリースビルド実行"
    },
    {
      "name": "windows-mingw-debug",
      "configurePreset": "windows-mingw-debug",
      "displayName": "Windows MinGW Debug ビルド",
      "description": "Windows MinGW デバッグビルド実行"
    },
    {
      "name": "windows-mingw-release",
      "configurePreset": "windows-mingw-release",
      "displayName": "Windows MinGW Release ビルド",
      "description": "Windows MinGW リリースビルド実行"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "displayName": "Linux Debug ビルド",
      "description": "Linux デバッグビルド実行"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "displayName": "Linux Release ビルド",
      "description": "Linux リリースビルド実行"
    }
  ],
  "testPresets": [
    {
      "name": "windows-msvc-debug",
      "configurePreset": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug テスト",
      "description": "Windows MSVC デバッグ環境でテスト実行",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-mingw-debug",
      "configurePreset": "windows-mingw-debug",
      "displayName": "Windows MinGW Debug テスト",
      "description": "Windows MinGW デバッグ環境でテスト実行",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "displayName": "Linux Debug テスト",
      "description": "Linux デバッグ環境でテスト実行",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}

